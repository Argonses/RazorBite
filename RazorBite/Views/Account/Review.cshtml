<div class="container my-5">
    <h1 class="text-center mb-4">Zanechat hodnocení</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="name">Jméno</label>
                    <input type="text" class="form-control" id="name" placeholder="Vaše jméno" required>
                </div>
                <div class="form-group">
                    <label for="name">Příjmení</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Vaše příjmení" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Váš email" required>
                </div>
                <div class="form-group">
                    <label for="phone">Telefon</label>
                    <input type="number" class="form-control" id="phone" placeholder="Váš telefon" required>
                </div>
                <div class="form-group">
                    <label for="date">Čas návštěvy</label>
                    <input type="date" class="form-control" id="date" placeholder="Čas návštěvy restaurace" required>
                </div>
                <div class="form-group">
                    <label for="rating">Hodnocení</label>
                    <select class="form-control" id="rating" required>
                        <option value="" disabled selected>Vyberte hodnocení</option>
                        <option value="5">5 hvězd</option>
                        <option value="4">4 hvězdy</option>
                        <option value="3">3 hvězdy</option>
                        <option value="2">2 hvězdy</option>
                        <option value="1">1 hvězda</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="comment">Komentář</label>
                    <textarea class="form-control" id="comment" rows="5" placeholder="Váš komentář"></textarea>
                </div>                
                <button type="submit" class="btn btn-primary btn-block">Přidat hodnocení</button>
            </form>
        </div>
    </div>
</div>
